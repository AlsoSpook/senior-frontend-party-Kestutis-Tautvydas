{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "src",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "src",
    "target": "es2015",
    "noEmit": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["typings/*.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
